{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Gravity Simulator 2D/Gravity Simulator 2D.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:PublishReadyToRun=false",
                "/p:TieredCompilation=false"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Gravity Simulator 2D/Gravity Simulator 2D.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:PublishReadyToRun=false",
                "/p:TieredCompilation=false",
                "--self-contained"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Gravity Simulator 2D/Gravity Simulator 2D.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}